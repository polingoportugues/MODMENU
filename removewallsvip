-- Script para Remover Paredes VIP
-- Baseado na estrutura: workspace.VIPWalls com partes "VIP" e "VIP_PLUS"

local function removeVIPWalls()
    print("üîì Iniciando remo√ß√£o de paredes VIP...")
    
    -- Verificar se VIPWalls existe
    local vipWalls = workspace:FindFirstChild("VIPWalls")
    
    if not vipWalls then
        warn("‚ö†Ô∏è VIPWalls n√£o encontrado no workspace!")
        return
    end
    
    -- M√©todo 1: Deletar completamente as paredes VIP
    local wallsRemoved = 0
    local textRemoved = 0
    
    for _, wall in pairs(vipWalls:GetChildren()) do
        -- Remover textos VIP antes de deletar a parede
        for _, child in pairs(wall:GetDescendants()) do
            if child:IsA("SurfaceGui") or child:IsA("BillboardGui") or 
               child:IsA("Decal") or child:IsA("Texture") then
                child:Destroy()
                textRemoved = textRemoved + 1
            end
        end
        
        if wall:IsA("BasePart") then
            wall:Destroy()
            wallsRemoved = wallsRemoved + 1
        end
    end
    
    print("‚úÖ " .. wallsRemoved .. " paredes VIP deletadas!")
    print("‚úÖ " .. textRemoved .. " textos/letreiros VIP removidos!")
    
    -- Opcional: Deletar o container inteiro
    -- vipWalls:Destroy()
    -- print("‚úÖ Container VIPWalls completamente removido!")
end

-- M√©todo alternativo: Tornar paredes invis√≠veis e n√£o colid√≠veis (mais seguro)
local function bypassVIPWalls()
    print("üîì Iniciando bypass de paredes VIP...")
    
    local vipWalls = workspace:FindFirstChild("VIPWalls")
    
    if not vipWalls then
        warn("‚ö†Ô∏è VIPWalls n√£o encontrado no workspace!")
        return
    end
    
    local wallsBypassed = 0
    local textRemoved = 0
    
    for _, wall in pairs(vipWalls:GetChildren()) do
        if wall:IsA("BasePart") then
            -- Tornar n√£o colid√≠vel
            wall.CanCollide = false
            
            -- Tornar invis√≠vel
            wall.Transparency = 1
            
            -- Desabilitar casting de sombra
            wall.CastShadow = false
            
            wallsBypassed = wallsBypassed + 1
        end
        
        -- Remover textos/decals/SurfaceGuis com "VIP"
        for _, child in pairs(wall:GetDescendants()) do
            if child:IsA("SurfaceGui") or child:IsA("BillboardGui") or 
               child:IsA("Decal") or child:IsA("Texture") then
                child:Destroy()
                textRemoved = textRemoved + 1
            end
        end
    end
    
    print("‚úÖ " .. wallsBypassed .. " paredes VIP bypassed (invis√≠veis e n√£o colid√≠veis)!")
    print("‚úÖ " .. textRemoved .. " textos/letreiros VIP removidos!")
end

-- M√©todo 3: Remover paredes espec√≠ficas (VIP e VIP_PLUS)
local function removeSpecificVIPWalls()
    print("üîì Removendo paredes VIP espec√≠ficas...")
    
    local vipWalls = workspace:FindFirstChild("VIPWalls")
    
    if not vipWalls then
        warn("‚ö†Ô∏è VIPWalls n√£o encontrado no workspace!")
        return
    end
    
    local vipRemoved = 0
    local vipPlusRemoved = 0
    local textRemoved = 0
    
    for _, wall in pairs(vipWalls:GetChildren()) do
        -- Remover textos VIP
        for _, child in pairs(wall:GetDescendants()) do
            if child:IsA("SurfaceGui") or child:IsA("BillboardGui") or 
               child:IsA("Decal") or child:IsA("Texture") then
                child:Destroy()
                textRemoved = textRemoved + 1
            end
        end
        
        if wall.Name == "VIP" then
            wall:Destroy()
            vipRemoved = vipRemoved + 1
        elseif wall.Name == "VIP_PLUS" then
            wall:Destroy()
            vipPlusRemoved = vipPlusRemoved + 1
        end
    end
    
    print("‚úÖ " .. vipRemoved .. " paredes VIP removidas!")
    print("‚úÖ " .. vipPlusRemoved .. " paredes VIP_PLUS removidas!")
    print("‚úÖ " .. textRemoved .. " textos/letreiros VIP removidos!")
end

-- M√©todo 4: Sistema de auto-remo√ß√£o cont√≠nua (caso as paredes respawnem)
local function autoRemoveVIPWalls()
    print("üîÑ Sistema de auto-remo√ß√£o ativado...")
    
    game:GetService("RunService").Heartbeat:Connect(function()
        local vipWalls = workspace:FindFirstChild("VIPWalls")
        
        if vipWalls then
            for _, wall in pairs(vipWalls:GetChildren()) do
                if wall:IsA("BasePart") and wall.CanCollide == true then
                    wall.CanCollide = false
                    wall.Transparency = 1
                end
                
                -- Remover textos VIP continuamente
                for _, child in pairs(wall:GetDescendants()) do
                    if child:IsA("SurfaceGui") or child:IsA("BillboardGui") or 
                       child:IsA("Decal") or child:IsA("Texture") then
                        child:Destroy()
                    end
                end
            end
        end
    end)
    
    print("‚úÖ Auto-remo√ß√£o de paredes VIP ativada permanentemente!")
    print("‚úÖ Textos VIP ser√£o removidos automaticamente!")
end

-- Menu de sele√ß√£o
print("=== REMOVEDOR DE PAREDES VIP ===")
print("Escolha o m√©todo:")
print("1 - Deletar paredes VIP (permanente)")
print("2 - Bypass (invis√≠vel e n√£o colid√≠vel)")
print("3 - Remover VIP e VIP_PLUS espec√≠ficos")
print("4 - Auto-remo√ß√£o cont√≠nua")
print("================================")

-- Executar m√©todo escolhido (altere o n√∫mero conforme desejado)
local metodo = 2  -- Mude para 1, 2, 3 ou 4

if metodo == 1 then
    removeVIPWalls()
elseif metodo == 2 then
    bypassVIPWalls()
elseif metodo == 3 then
    removeSpecificVIPWalls()
elseif metodo == 4 then
    autoRemoveVIPWalls()
else
    warn("‚ùå M√©todo inv√°lido! Escolha entre 1, 2, 3 ou 4")
end

print("üéØ Script conclu√≠do!")
